<header title="{{data.name}}"></header>

<view class="info">
  <view class="info-title">规则详情</view>
  
  
  <view class="info-data">
    <view class="info-data-title">照片要求</view>
    <view class="info-data-content">请截取宝宝面部（勿包含边框或文字）</view>
  </view>
  
</view>


<view style="margin-top: 35rpx;">
  <view style="display: flex; margin-left: 35rpx;">
    <image src="../../assets/icon/guide_icon.png" style="width: 44rpx; height: 44rpx;"></image>
    <view style="margin-left: 26rpx; font-weight: 700; font-size: 34rpx;"class="navigate">效果演示</view>
  </view>
  <swiper 
    autoplay="true"
    class="guide"
  >
    <swiper-item>
      <image src="../../assets/icon/guide1.jpg" class="guide-item"></image>
    </swiper-item>
  </swiper>
</view>

<view class="bottom">
    <button class="btn btn-left" bindtap="pickAPhoto">从相册中选择</button>
    <button class="btn btn-right" bindtap="takeAPhoto">拍摄</button>
</view>

